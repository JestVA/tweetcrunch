{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"baseUrl": "./",
		"outDir": "build",
		"sourceMap": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"target": "ES6",
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"./src/**/*.ts",
		"src/public/react/tweet-crunch/src/utils/requestAPI.tsx"
	],
	"exclude": [
		"./src/**/*.test.ts",
		"./src/public/"
	]
}